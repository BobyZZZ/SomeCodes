<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--小说标题-->
    <style name="TvNovelTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tv_novel_title_color</item>
        <item name="android:textSize">@dimen/tv_novel_title_size</item>
    </style>

    <style name="TvNovelContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_novel_content_size</item>
        <item name="android:textColor">@color/tv_novel_title_color</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <!--分割线-->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorAccent_light</item>
    </style>
</resources>
